---
// src/components/AuthForm.astro
interface Props {
  view: "login" | "signup";
  error?: string | null;
}

const { view, error } = Astro.props;
---

<div class="space-y-6">
  {error && (
    <div class="p-3 bg-red-100 text-red-700 rounded-lg text-sm">
      {decodeURIComponent(error)}
    </div>
  )}

  <form 
    method="POST" 
    action={`/auth/${view}`} 
    class="space-y-4"
    id="auth-form"
  >
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div>
      <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        minlength="6"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <button
      type="submit"
      class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
    >
      {view === "login" ? "Iniciar sesión" : "Crear cuenta"}
    </button>
  </form>

  <div class="text-center text-sm text-gray-600">
    {view === "login" ? (
      <p>
        ¿No tienes cuenta?{' '}
        <a href="/signup" class="text-blue-600 hover:text-blue-500 font-medium">Regístrate aquí</a>
      </p>
    ) : (
      <p>
        ¿Ya tienes cuenta?{' '}
        <a href="/login" class="text-blue-600 hover:text-blue-500 font-medium">Inicia sesión</a>
      </p>
    )}
  </div>
</div>